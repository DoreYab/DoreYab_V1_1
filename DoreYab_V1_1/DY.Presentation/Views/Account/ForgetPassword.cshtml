@model DY.Presentation.Models.Account.ForgetPasswordViewModel

@{
    ViewData["Title"] = "فراموشی رمز عبور";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="max-w-md mx-auto mt-10 bg-white dark:bg-gray-800 p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center mb-6 text-gray-800 dark:text-white">فراموشی رمز عبور</h2>

    @if (ViewBag.Message != null)
    {
        <div class="text-center text-green-600 mb-4" style="direction: rtl;">
            @Html.Raw(ViewBag.Message)
        </div>
    }

    <form method="post" asp-action="ForgotPassword" class="space-y-4">
        <input asp-for="Email" placeholder="ایمیل ثبت‌شده شما"
               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" />
        <span class="text-sm text-red-500">@Html.ValidationMessageFor(m => m.Email)</span>

        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition">ارسال لینک بازنشانی</button>
    </form>
</section>
