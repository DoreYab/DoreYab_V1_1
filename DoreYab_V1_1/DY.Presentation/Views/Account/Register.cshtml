@model DY.Presentation.Models.Account.RegisterViewModel

@{
    ViewData["Title"] = "ثبت نام کاربر";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="max-w-md mx-auto mt-10 bg-white dark:bg-gray-800 p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center mb-6 text-gray-800 dark:text-white">ثبت‌نام در دوره‌یاب</h2>
    <form asp-controller="Account" asp-action="Register" method="post" class="space-y-4" onsubmit="handleSubmit(event)">
        <input asp-for="FullName" placeholder="مثلاً سهیل محمدی" required
               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" />

        <input asp-for="Email" placeholder="مثلاً soheil@email.com" required
               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" />

        <input asp-for="Password" placeholder="رمز عبور" required type="password"
               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" />

        <input asp-for="ConfirmPassword" placeholder="تکرار رمز عبور" required type="password"
               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" />

        <div class="flex items-center">
            <input type="checkbox" id="terms" required
                   class="ml-2 w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:bg-gray-700 dark:border-gray-600">
            <label for="terms" class="text-gray-600 dark:text-gray-300">با شرایط استفاده موافقم</label>
        </div>

        <button type="submit"
                class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition">
            ثبت‌نام
        </button>
    </form>

    <p class="text-center mt-4 text-sm text-gray-600 dark:text-gray-300">
        قبلاً حساب دارید؟ <a asp-controller="Account" asp-action="Login" class="text-blue-600 hover:underline">ورود</a>
    </p>

    <p id="success" class="text-green-600 text-center mt-4 hidden">ثبت‌نام با موفقیت انجام شد!</p>
</section>

