@model DY.Presentation.Models.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = "بازنشانی رمز عبور";
}

<section class="max-w-md mx-auto mt-10 bg-white dark:bg-gray-800 p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center mb-6 text-gray-800 dark:text-white">بازنشانی رمز عبور</h2>

    <form method="post" asp-action="ResetPassword" class="space-y-4">
        <input type="hidden" asp-for="Token" />
        <input type="hidden" asp-for="Email" />

        <div>
            <label asp-for="Password" class="block mb-1 text-gray-700 dark:text-gray-200">رمز جدید</label>
            <input asp-for="Password" class="w-full px-4 py-2 border rounded-md dark:bg-gray-700 dark:text-white" />
            <span class="text-sm text-red-500">@Html.ValidationMessageFor(m => m.Password)</span>
        </div>

        <div>
            <label asp-for="ConfirmPassword" class="block mb-1 text-gray-700 dark:text-gray-200">تکرار رمز عبور</label>
            <input asp-for="ConfirmPassword" class="w-full px-4 py-2 border rounded-md dark:bg-gray-700 dark:text-white" />
            <span class="text-sm text-red-500">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition">تغییر رمز عبور</button>
    </form>
</section>
