@model DY.Application.Contract.ViewModels.CourseViewModel



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Course - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="bg-white text-black">
    <div class="container mx-auto px-4 py-8 max-w-4xl">
        <div class="flex items-center mb-8">
            <i class="fas fa-book-open text-3xl mr-3 text-yellow-500"></i>
            <h1 class="text-3xl font-bold">Create New Course</h1>
        </div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 text-green-700 px-4 py-2 rounded mb-4">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4">
                @TempData["ErrorMessage"]
            </div>
        }


        <form asp-action="Create" method="post" class="space-y-6">
            @Html.AntiForgeryToken()
            <!-- Basic Information -->
            <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
                <h2 class="text-xl font-semibold mb-4 flex items-center">
                    <i class="fas fa-info-circle mr-2 text-yellow-500"></i> Basic Information
                </h2>

                <!-- Title -->
                <div class="mb-4">
                    <label asp-for="Title" class="block text-sm font-medium mb-1">Title <span class="text-red-500">*</span></label>
                    <input asp-for="Title" type="text" id="Title" required class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none gold-focus" />
                    <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
                </div>

                <!-- Slug -->
                <div class="mb-4">
                    <label asp-for="Slug" class="block text-sm font-medium mb-1">Slug <span class="text-red-500">*</span></label>
                    <div class="flex">
                        <span class="inline-flex items-center px-3 py-2 border border-r-0 border-gray-300 bg-gray-100 text-gray-500 text-sm rounded-l-md">/courses/</span>
                        <input type="text" id="Slug" asp-for="Slug" class="flex-1 min-w-0 block w-full px-3 py-2 rounded-none rounded-r-md border border-gray-300 focus:outline-none gold-focus" />
                    </div>
                    <span asp-validation-for="Slug" class="text-red-500 text-sm"></span>
                </div>

                <!-- Description -->
                <div class="mb-4">
                    <label asp-for="Description" class="block text-sm font-medium mb-1">Desctiption</label>
                    <textarea asp-for="Description" rows="3"
                              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none gold-focus"></textarea>
                </div>

                
                <!-- Category -->
                <div class="mb-4">
                    <label asp-for="SelectedCategoryId" class="block text-sm font-medium mb-1">Category <span class="text-red-500">*</span></label>
                    <select asp-for="SelectedCategoryId" asp-items="@Model.CourseCategories" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none gold-focus">
                        <option value="">Select a category</option>
                        @foreach (var item in Model.CourseCategories)
                        {
                            <option value="@item.Value">@item.Text</option>
                            
                        }

                    </select>
                    <span asp-validation-for="SelectedCategoryId" class="text-red-500 text-sm"></span>
                </div>

            </div>


            <!-- Pricing & Status -->
            <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
                <h2 class="text-xl font-semibold mb-4 flex items-center">
                    <i class="fas fa-tag mr-2 text-yellow-500"></i> Pricing & Status
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- Price -->
                    <div class="mb-4">
                        <label asp-for="Price" class="block text-sm font-medium mb-1">Price ($)</label>
                        <div class="relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <span class="text-gray-500 sm:text-sm">$</span>
                            </div>
                            <input asp-for="Price" type="number" step="0.01" id="price" class="focus:outline-none gold-focus block w-full pl-7 pr-12 py-2 border border-gray-300 rounded-md" />
                            <div class="absolute inset-y-0 right-0 flex items-center">
                                <span class="text-gray-500 sm:text-sm mr-3">USD</span>
                            </div>
                        </div>
                    </div>

                    <!-- IsFree -->
                    <div class="mb-4 flex items-center">
                        <input asp-for="IsFree" type="checkbox" class="gold-checkbox focus:ring-yellow-500 h-4 w-4 text-yellow-600 border-gray-300 rounded" />
                        <label asp-for="IsFree" class="ml-2 block text-sm font-medium">Mark as Free Course</label>
                    </div>

                    <!-- IsFinished -->
                    <div class="mb-4 flex items-center">
                        <input asp-for="IsFinished" type="checkbox" class="gold-checkbox focus:ring-yellow-500 h-4 w-4 text-yellow-600 border-gray-300 rounded" />
                        <label asp-for="IsFinished" class="ml-2 block text-sm font-medium">Course is Completed</label>
                    </div>
                </div>
            </div>

            <!-- Media & Links -->
            <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
                <h2 class="text-xl font-semibold mb-4 flex items-center">
                    <i class="fas fa-link mr-2 text-yellow-500"></i> Media & Links
                </h2>

                <!-- ImageUrl -->
                <div class="mb-4">
                    <label asp-for="ImageUrl" class="block text-sm font-medium mb-1">Image URL <span class="text-red-500">*</span></label>
                    <input asp-for="ImageUrl" type="url" id="ImageUrl"  required class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none gold-focus" />
                </div>

                <!-- CourseUrl -->
                <div class="mb-4">
                    <label asp-for="CourseUrl" class="block text-sm font-medium mb-1"> Course URL <span class="text-red-500">*</span></label>
                    <input asp-for="CourseUrl" type="url" id="CourseUrl"  required class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none gold-focus" />
                </div>

                <!-- SiteSource -->
                <div class="mb-4">
                    <label asp-for="SiteSource" class="block text-sm font-medium mb-1">Source Website <span class="text-red-500">*</span></label>
                    <input asp-for="SiteSource" type="text" id="SiteSource"  required class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none gold-focus" />
                </div>
            </div>

            <!-- SEO -->
            <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
                <h2 class="text-xl font-semibold mb-4 flex items-center">
                    <i class="fas fa-search mr-2 text-yellow-500"></i> SEO Information
                </h2>

                <!-- MetaTitle -->
                <div class="mb-4">
                    <label asp-for="MetaTitle" class="block text-sm font-medium mb-1">MetaTitle</label>
                    <input asp-for="MetaTitle" type="text" id="MetaTitle" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none gold-focus" />
                </div>

                <!-- MetaDescription -->
                <div class="mb-4">
                    <label asp-for="MetaDescription" class="block text-sm font-medium mb-1">MetaDescription</label>
                    <textarea asp-for="MetaDescription" id="MetaDescription" rows="2" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none gold-focus"></textarea>
                </div>

                <!-- MetaKeyword -->
                <div class="mb-4">
                    <label asp-for="MetaKeyword" class="block text-sm font-medium mb-1">MetaKeyword</label>
                    <input asp-for="MetaKeyword" type="text" id="MetaKeyword" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none gold-focus" />
                    <p class="mt-1 text-xs text-gray-500">Separate keywords with commas</p>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex justify-end space-x-3">
                <button type="button" class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
                    Cancel
                </button>
                <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-black bg-yellow-500 hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
                    <i class="fas fa-save mr-2"></i> Create Course
                </button>
            </div>
        </form>

    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>