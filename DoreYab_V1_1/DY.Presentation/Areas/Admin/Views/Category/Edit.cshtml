@model DY.Application.Contract.CourseCategory.RenameCourseCategory
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Course Category</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-3xl bg-white p-10 rounded-3xl shadow-2xl">
        
        <!-- Header -->
        <div class="mb-10 text-center">
            <h2 class="text-4xl font-extrabold text-gray-800 mb-2 flex items-center justify-center">
                <i class="fas fa-edit text-indigo-500 mr-2"></i>Edit Course Category
            </h2>
            <p class="text-gray-500 text-sm">You can update the course category details below.</p>
        </div>

        <!-- Form -->
        <form method="post" asp-area="Admin" asp-controller="Category" asp-action="Edit" class="space-y-6">


            <!-- Title -->
            <div>
                <label for="Title" class="block text-sm font-semibold text-gray-700 mb-1 required-field">
                    <i class="fas fa-tag mr-2 text-indigo-400"></i>Title
                </label>
                <input asp-for="Title" type="text" id="Title" name="Title" required
                       class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2
                            focus:ring-indigo-500 focus:border-indigo-500 transition"
                       placeholder="Enter category title">
                <span asp-validation-for="Title" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <!-- Short Description -->
            <div>
                <label for="ShortDescription" class="block text-sm font-semibold text-gray-700 mb-1">
                    <i class="fas fa-align-left mr-2 text-indigo-400"></i>Short Description
                </label>
                <textarea asp-for="ShortDescription" id="ShortDescription" required name="ShortDescription" rows="3"
                          class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2
                                focus:ring-indigo-500 focus:border-indigo-500 transition"
                          placeholder="Enter a brief description (optional)"></textarea>
                <span  class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <!-- Course Count (Readonly) -->
            <div>
                <label for="CourseCount" class="block text-sm font-semibold text-gray-700 mb-1">
                    <i class="fas fa-list-ol mr-2 text-indigo-400"></i>Course Count
                </label>
                <input type="number" id="CourseCount" name="CourseCount" readonly
                       class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-gray-100 cursor-not-allowed shadow-inner
                            focus:outline-none"
                       value="@Model.CourseCount">
                <p class="text-xs text-gray-400 mt-1">This field is read-only and cannot be edited.</p>
            </div>

            <!-- IsDeleted (Checkbox) -->
            <div class="flex items-center space-x-3">
                <input  type="checkbox" id="IsDeleted" name="IsDeleted"
                       class="h-5 w-5 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                <label for="IsDeleted" class="text-sm font-medium text-gray-700 flex items-center">
                    <i class="fas fa-trash-alt mr-1 text-indigo-400"></i>Mark as Deleted
                </label>
            </div>

            <!-- Actions -->
            <div class="flex justify-end gap-4 pt-8">
                <a href="/Admin/Category/List"
                   class="inline-flex items-center px-5 py-3 border border-gray-300 text-sm font-medium rounded-xl
                        text-gray-700 bg-white hover:bg-gray-50 transition">
                    <i class="fas fa-arrow-left mr-2"></i>Cancel
                </a>
                <button type="submit"
                        class="inline-flex items-center px-5 py-3 border border-transparent text-sm font-medium rounded-xl
                            shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 transition">
                    <i class="fas fa-save mr-2"></i>Save Changes
                </button>
            </div>
        </form>
    </div>

    <!-- Validation Scripts -->
    <partial name="_ValidationScriptsPartial" />

    <style>
        .required-field::after {
            content: '*';
            color: #ef4444;
            margin-left: 0.25rem;
        }
    </style>
</body>
</html>
